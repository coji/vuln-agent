{
  "name": "vuln-agent",
  "version": "1.0.0",
  "description": "LLM-powered vulnerability scanner for your codebase",
  "keywords": [
    "security",
    "vulnerability",
    "scanner",
    "llm",
    "ai",
    "openai",
    "anthropic",
    "gemini"
  ],
  "homepage": "https://github.com/coji/vuln-agent",
  "repository": {
    "type": "git",
    "url": "https://github.com/coji/vuln-agent.git"
  },
  "bugs": {
    "url": "https://github.com/coji/vuln-agent/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "vuln-agent": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier . --check --experimental-cli",
    "format:fix": "prettier . --write --experimental-cli",
    "lint": "biome lint .",
    "test": "vitest",
    "test:integration": "vitest run test/integration",
    "test:watch": "vitest watch",
    "typecheck": "tsc -b",
    "validate": "run-p format lint && run-p typecheck test"
  },
  "author": "",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@hono/node-server": "1.17.1",
    "@types/debug": "4.1.12",
    "@types/node": "24.1.0",
    "hono": "4.8.9",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "1.2.12",
    "@ai-sdk/google": "1.2.22",
    "@ai-sdk/openai": "1.3.23",
    "ai": "4.3.19",
    "commander": "14.0.0",
    "debug": "4.4.1",
    "zod": "3.25.76"
  }
}
